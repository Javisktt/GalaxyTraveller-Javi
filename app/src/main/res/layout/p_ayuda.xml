<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondo_app2"
    tools:context=".p_ayuda">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.4"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/galaxy_traveller"
            android:layout_width="717dp"
            android:layout_height="1405dp"
            android:contentDescription="@string/desc"
            android:src="@drawable/logo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.4"
            android:orientation="vertical">

            <Button
                android:id="@+id/button_en"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="1150dp"
                android:background="@drawable/english_icon"/>

            <Button
                android:id="@+id/button_cat"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="1350dp"
                android:layout_marginTop="-100dp"
                android:background="@drawable/catalan_icon" />

            <Button
                android:id="@+id/button_esp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="1550dp"
                android:layout_marginTop="-100dp"
                android:background="@drawable/spanish_icon" />

            <TextView
                android:id="@+id/textView_titulo"
                style="@style/textTittleStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="200dp"
                android:text="@string/textajudatitulo" />

            <TextView
                android:id="@+id/textView_desc1"
                style="@style/textStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:text="@string/textajuda" />

            <TextView
                android:id="@+id/textView_desc2"
                style="@style/textStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:text="@string/textajuda2" />

            <TextView
                android:id="@+id/textView_desc3"
                style="@style/textStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:text="@string/textajuda3" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>