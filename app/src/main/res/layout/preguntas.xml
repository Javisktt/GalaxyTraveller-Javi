<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.galaxytraveller.p_preguntas"
    android:orientation="vertical"
    android:background="@drawable/fondo_app2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_enrere"
            android:layout_width="114dp"
            android:layout_height="101dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/arrow_back" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/nomPregunta"
            android:layout_marginTop="30dp"
            android:layout_width="850dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/button_fondo3"
            android:gravity="center" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="2064dp"
        android:layout_height="0dp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="30dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <Button
            android:id="@+id/opcio1"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="450dp"
            android:layout_width="500dp"
            android:layout_height="200dp"
            android:background="@drawable/button_fondo3" />

        <Button
            android:id="@+id/opcio2"
            android:layout_marginTop="20dp"
            android:layout_width="500dp"
            android:layout_height="200dp"
            android:layout_marginLeft="250dp"
            android:background="@drawable/button_fondo3" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="2057dp"
        android:layout_height="0dp"
        android:layout_marginLeft="300dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <Button
            android:id="@+id/opcio3"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="450dp"
            android:layout_width="500dp"
            android:layout_height="200dp"
            android:background="@drawable/button_fondo3" />

        <Button
            android:id="@+id/opcio4"
            android:layout_marginTop="20dp"
            android:layout_width="500dp"
            android:layout_height="200dp"
            android:layout_marginLeft="250dp"
            android:background="@drawable/button_fondo3" />


    </LinearLayout>

</LinearLayout>