<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/fondo_app2"
    tools:context=".p2_start">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <ImageView
            android:layout_width="949dp"
            android:layout_height="1166dp"
            android:contentDescription="@string/desc"
            android:src="@drawable/logo"
            tools:ignore="MissingConstraints" />


        <Button
            android:id="@+id/p2_buttonJugar"
            style="@style/buttonStyleBig"
            android:layout_width="950dp"
            android:layout_height="250dp"
            android:layout_marginLeft="350dp"
            android:layout_marginTop="-50dp"
            android:text="@string/button_Jugar" />

        <Button
            android:id="@+id/p2_buttonAyuda"
            style="@style/ayuda"
            android:layout_width="200dp"
            android:layout_height="100dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="-150dp"
            android:background="@android:color/transparent"
            android:text="@string/button_Ayuda"
            android:textColor="@color/colorAmarillo" />


    </androidx.appcompat.widget.LinearLayoutCompat>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/button_en"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="60dp"
            android:layout_marginRight="43dp"
            android:layout_toStartOf="@+id/button_cat"
            android:layout_toLeftOf="@+id/button_cat"
            android:background="@drawable/english_icon" />

        <Button
            android:id="@+id/button_cat"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="60dp"
            android:layout_marginRight="60dp"
            android:layout_toStartOf="@+id/button_esp"
            android:layout_toLeftOf="@+id/button_esp"
            android:background="@drawable/catalan_icon" />

        <Button
            android:id="@+id/button_esp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="60dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/spanish_icon" />

        <Button
            android:id="@+id/p2_buttonInicio"
            style="@style/buttonStyle"
            android:layout_width="650dp"
            android:layout_height="250dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="200dp"
            android:text="@string/button_Inicio" />

        <Button
            android:id="@+id/p2_buttonPersonPj"
            style="@style/buttonStyle"
            android:layout_width="870dp"
            android:layout_height="250dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="500dp"
            android:text="@string/button_PersonPj" />

        <Button
            android:id="@+id/p2_buttonRanking"
            style="@style/buttonStyle"
            android:layout_width="650dp"
            android:layout_height="250dp"
            android:layout_marginTop="800dp"
            android:layout_centerHorizontal="true"
            android:text="@string/button_Ranking" />

    </RelativeLayout>

</LinearLayout>