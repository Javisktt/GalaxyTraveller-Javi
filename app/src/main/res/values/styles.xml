<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="textTittleStyle">
        <item name="android:textColor">@color/colorAmarillo</item>
        <item name="android:textSize">@dimen/textSizeTittle</item>
    </style>

    <style name="textStyle">
        <item name="android:textColor">@color/colorAmarillo</item>
        <item name="android:textSize">@dimen/textSizeNormal</item>
    </style>

    <style name="textStyleBig">
        <item name="android:textColor">@color/colorAmarillo</item>
        <item name="android:textSize">@dimen/textSizeBig</item>
    </style>

    <style name="buttonStyleBig">
        <item name="android:background">@drawable/button_fondo3</item>
        <item name="android:textColor">@color/colorAzulOscuro</item>
        <item name="android:textSize">@dimen/textSizeBigButtons</item>
    </style>

    <style name="buttonStyle">
        <item name="android:background">@drawable/button_fondo3</item>
        <item name="android:textColor">@color/colorAzulOscuro</item>
        <item name="android:textSize">@dimen/textSizeNormal</item>
    </style>

    <style name="ayuda">
        <item name="android:textSize">@dimen/textSizeNormal</item>
    </style>

    <style name="pregunta">
        <item name="android:background">@drawable/button_fondo3</item>
        <item name="android:textColor">@color/colorBlanco</item>
        <item name="android:textSize">@dimen/textSizePreguntas</item>
    </style>

    <style name="opcio">
        <item name="android:background">@drawable/button_fondo3</item>
        <item name="android:textColor">@color/colorBlanco</item>
        <item name="android:textSize">@dimen/textSizePreguntas</item>
    </style>

    <style name="cronometro">
        <item name="android:background">@drawable/cronometro</item>
        <item name="android:textColor">@color/colorBlanco</item>
        <item name="android:textSize">@dimen/textSizeCronometro</item>
    </style>
 </resources>
